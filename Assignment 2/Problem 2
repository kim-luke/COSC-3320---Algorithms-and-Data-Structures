#include <iostream>
#include <string>
#include <ctime>
using namespace std;

int main() {

    int n[6] = {16, 64, 256, 1024, 4096, 16384};

    size_t m1 = 1677721600;
    size_t m2 = 13421772800;
    clock_t start, stop;

    int next = 0;
    double time = 0;

    while (next < 6) {
        int a, b, x;

        int** array = new int*[n[next]];

        for (int i = 0; i < n[next]; i++) {
            array[i] = new int[i];
        }

        for (int i = 0; i < n[next]; i++) {
            for (int j = 0; j < n[next]; j++) {
                array[i][j] = 0;
            }
        }

        start = clock();
        for (int i = 0; i < m1; i++) {
            x = rand() % 100 + 1;
            a = rand() % n[next];
            b = rand() % n[next];
            array[a][b] += x;
        }
        stop = clock();

        time = double(stop - start) / double(CLOCKS_PER_SEC);
        cout << "The time for size " << n[next] << " with m value of " << m1 << " is " << time << " seconds." << endl;

        start = clock();
        for (int i = 0; i < m2; i++) {
            x = rand() % 100 + 1;
            a = rand() % n[next];
            b = rand() % n[next];
            array[a][b] += x;
        }
        stop = clock();

        time = double(stop - start) / double(CLOCKS_PER_SEC); 
        cout << "The time for size " << n[next] << " with m value of " << m2 << " is " << time << " seconds." << endl;
        
        next++;
    }

    return 0;
}
