#include <iostream>
#include <string>
#include <stdlib.h>
#include <ctime>
using namespace std;

int generateNumbers() {
    int randNumber = rand() % 100;
    
    return randNumber;
}

int main() {

    srand(time(nullptr));

    int sizes[10] = {128, 256, 512, 1024, 2048, 4096, 8192, 16384, 32768, 65536};

    for (int a = 0; a < 10; a++) {
        int size = sizes[a];
        int A[size][size];

        for (int d = 0; d < sizes[a]; d++) {
            for (int f = 0; f < sizes[a]; f++) {
                A[d][f] = generateNumbers();
                //cout << "Current index of A: [" << d << "]" << "[" << f << "]" << " and the current value: " << A[d][f] << endl;
            }
        }   
    }

    for (int b = 0; b < 10; b++) {
        int size = sizes[b];
        int B[size][size];

        for (int e = 0; e < sizes[b]; e++) {
            for (int g = 0; g < sizes[b]; g++) {
                B[e][g] = generateNumbers();
                //cout << "Current index of B: [" << e << "]" << "[" << g << "]" << " and the current value: " << B[e][g] << endl;
            }
        }   
    }

    return 0;
}
